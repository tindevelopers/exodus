{%- comment -%}
  Exodus About Values
  3-column value pillar cards with left border accent.
  Based on Builder design: Field-Tested, Reliable, Expert Support.
{%- endcomment -%}

{%- style -%}
  #ExodusAboutValues-{{ section.id }} {
    width: 100%;
    background: #F9F9F9;
    padding: 80px 40px;
  }
  #ExodusAboutValues-{{ section.id }} .exodus-av__inner {
    max-width: 1200px;
    margin: 0 auto;
  }
  #ExodusAboutValues-{{ section.id }} .exodus-av__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }
  #ExodusAboutValues-{{ section.id }} .exodus-av__card {
    background: #FFFFFF;
    border-radius: 10px;
    padding: 32px 28px;
    border-left: 4px solid #4A90D9;
    display: flex;
    flex-direction: column;
    gap: 12px;
    transition: box-shadow 0.2s;
  }
  #ExodusAboutValues-{{ section.id }} .exodus-av__card:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }
  #ExodusAboutValues-{{ section.id }} .exodus-av__card-heading {
    font-family: 'DM Sans', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 140%;
    color: #0D0D0D;
    margin: 0;
  }
  #ExodusAboutValues-{{ section.id }} .exodus-av__card-body {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 15px;
    line-height: 170%;
    color: #636363;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    #ExodusAboutValues-{{ section.id }} .exodus-av__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }

  @media screen and (max-width: 749px) {
    #ExodusAboutValues-{{ section.id }} {
      padding: 50px 20px;
    }
  }
{%- endstyle -%}

<section id="ExodusAboutValues-{{ section.id }}">
  <div class="exodus-av__inner">
    <div class="exodus-av__grid">
      {%- for block in section.blocks -%}
        <div class="exodus-av__card" {{ block.shopify_attributes }}>
          <h3 class="exodus-av__card-heading">{{ block.settings.heading }}</h3>
          {%- if block.settings.body != blank -%}
            <p class="exodus-av__card-body">{{ block.settings.body }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Values",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Field-Tested"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Description",
          "default": "Every equine and canine product is tested within our own breeding program. Real-world performance is our standard."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Values",
      "blocks": [
        {
          "type": "value",
          "settings": {
            "heading": "Field-Tested",
            "body": "Every equine and canine product is tested within our own breeding program. Real-world performance is our standard."
          }
        },
        {
          "type": "value",
          "settings": {
            "heading": "Reliable",
            "body": "In reproductive work, reliability is non-negotiable. We ensure every shipment meets the demands of time-sensitive programs."
          }
        },
        {
          "type": "value",
          "settings": {
            "heading": "Expert Support",
            "body": "Our team brings decades of industry knowledge. We're partners in your breeding program, not just a supplier."
          }
        }
      ]
    }
  ]
}
{% endschema %}
