{%- comment -%}
  Exodus Categories Carousel
  Horizontally scrollable pill-shaped category links with optional images.
  Design: Figma Epharma-Home categories section.
{%- endcomment -%}

{%- style -%}
  #ExodusCategories-{{ section.id }} {
    width: 100%;
    max-width: 1920px;
    margin: 0 auto;
    padding: 40px 20px 60px;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__title {
    padding: 10px 80px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 700;
    font-size: 22px;
    line-height: 140%;
    color: #0D0D0D;
    margin: 0;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__track-wrapper {
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__track-wrapper::-webkit-scrollbar {
    display: none;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__track {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 100px;
    gap: 60px;
    width: max-content;
  }
  /* Each category item: pill text + pill image side by side */
  #ExodusCategories-{{ section.id }} .exodus-categories__item {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-shrink: 0;
    text-decoration: none;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__pill {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 30px 40px;
    gap: 20px;
    height: 91px;
    border: 1px solid #A5A5A5;
    border-radius: 100px;
    background: transparent;
    transition: background 0.2s, border-color 0.2s;
    white-space: nowrap;
    box-sizing: border-box;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__pill:hover {
    border-color: #0D0D0D;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__pill-label {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 22px;
    line-height: 140%;
    color: #0D0D0D;
    transition: color 0.2s;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__pill-arrow {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__pill-arrow svg {
    width: 14px;
    height: 14px;
    stroke: #0D0D0D;
    transition: stroke 0.2s;
  }
  /* Active / featured state */
  #ExodusCategories-{{ section.id }} .exodus-categories__item--active .exodus-categories__pill {
    background: #0D0D0D;
    border-color: #0D0D0D;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__item--active .exodus-categories__pill-label {
    color: #FFFFFF;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__item--active .exodus-categories__pill-arrow svg {
    stroke: #FFFFFF;
  }
  /* Category image pill */
  #ExodusCategories-{{ section.id }} .exodus-categories__image {
    width: 260px;
    height: 91px;
    border-radius: 100px;
    overflow: hidden;
    flex-shrink: 0;
  }
  #ExodusCategories-{{ section.id }} .exodus-categories__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Tablet */
  @media screen and (max-width: 989px) {
    #ExodusCategories-{{ section.id }} .exodus-categories__title {
      padding: 10px 40px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__track {
      padding: 0 40px;
      gap: 30px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__pill {
      padding: 20px 28px;
      height: 70px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__pill-label {
      font-size: 18px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__image {
      width: 180px;
      height: 70px;
    }
  }
  /* Mobile */
  @media screen and (max-width: 749px) {
    #ExodusCategories-{{ section.id }} {
      gap: 20px;
      padding-top: 30px;
      padding-bottom: 30px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__title {
      padding: 0 20px;
      font-size: 18px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__track {
      padding: 0 20px;
      gap: 16px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__pill {
      padding: 16px 20px;
      height: 56px;
      gap: 12px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__pill-label {
      font-size: 15px;
    }
    #ExodusCategories-{{ section.id }} .exodus-categories__image {
      width: 120px;
      height: 56px;
    }
  }
{%- endstyle -%}

<section id="ExodusCategories-{{ section.id }}">
  {%- if section.settings.title != blank -%}
    <h2 class="exodus-categories__title">{{ section.settings.title }}</h2>
  {%- endif -%}

  <div class="exodus-categories__track-wrapper">
    <div class="exodus-categories__track">
      {%- for block in section.blocks -%}
        {%- if block.type == 'category' -%}
          <a
            href="{{ block.settings.link }}"
            class="exodus-categories__item{% if block.settings.featured %} exodus-categories__item--active{% endif %}"
            {{ block.shopify_attributes }}
          >
            <div class="exodus-categories__pill">
              <span class="exodus-categories__pill-label">{{ block.settings.label }}</span>
              <span class="exodus-categories__pill-arrow">
                <svg viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1 7h12M8 2l5 5-5 5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
            {%- if block.settings.image != blank -%}
              <div class="exodus-categories__image">
                {{ block.settings.image | image_url: width: 520, height: 182 | image_tag: loading: 'lazy' }}
              </div>
            {%- endif -%}
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Exodus Categories",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Popular Categories"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Vitamins & Supplements"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category image",
          "info": "Rounded pill image. Recommended: 520x182px."
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Featured (dark background)",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Exodus Categories",
      "blocks": [
        {
          "type": "category",
          "settings": { "label": "Vitamins & Supplements" }
        },
        {
          "type": "category",
          "settings": { "label": "Cold & Flu Relief" }
        },
        {
          "type": "category",
          "settings": { "label": "Allergy & Sinus" }
        },
        {
          "type": "category",
          "settings": { "label": "Digestive Health", "featured": true }
        },
        {
          "type": "category",
          "settings": { "label": "Pain & Fever Management" }
        },
        {
          "type": "category",
          "settings": { "label": "More+" }
        }
      ]
    }
  ]
}
{% endschema %}
