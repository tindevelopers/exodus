{%- comment -%}
  Exodus About Hero
  Dark green hero with text left, image in a floating card right.
  Clean, modern, professional layout.
{%- endcomment -%}

{%- style -%}
  #ExodusAboutHero-{{ section.id }} {
    width: 100%;
    background: #16261E;
    position: relative;
    overflow: hidden;
  }
  /* Subtle radial glow behind image area */
  #ExodusAboutHero-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: -20%;
    right: -5%;
    width: 60%;
    height: 140%;
    background: radial-gradient(ellipse at center, rgba(47, 79, 62, 0.6) 0%, transparent 70%);
    pointer-events: none;
    z-index: 0;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__inner {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 100px 50px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    min-height: 480px;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__content {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__label {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 12px;
    line-height: 140%;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #A5A5A5;
    margin: 0;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__heading {
    font-family: 'DM Sans', sans-serif;
    font-weight: 700;
    font-size: 46px;
    line-height: 115%;
    letter-spacing: -0.02em;
    color: #FFFFFF;
    margin: 0;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__divider {
    width: 48px;
    height: 3px;
    background: #2F4F3E;
    border-radius: 2px;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__subtitle {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 17px;
    line-height: 175%;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    max-width: 440px;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__image-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__image-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 24px 64px rgba(0, 0, 0, 0.35);
    max-width: 480px;
    width: 100%;
    aspect-ratio: 4 / 3;
  }
  #ExodusAboutHero-{{ section.id }} .exodus-ah__image-card img,
  #ExodusAboutHero-{{ section.id }} .exodus-ah__image-card svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  /* Subtle border overlay on the image card */
  #ExodusAboutHero-{{ section.id }} .exodus-ah__image-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    pointer-events: none;
  }

  /* ---- Responsive ---- */
  @media screen and (max-width: 989px) {
    #ExodusAboutHero-{{ section.id }} .exodus-ah__inner {
      grid-template-columns: 1fr;
      gap: 48px;
      padding: 70px 40px;
      min-height: auto;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__content {
      text-align: center;
      align-items: center;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__heading {
      font-size: 36px;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__subtitle {
      max-width: 520px;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__image-card {
      max-width: 520px;
    }
    #ExodusAboutHero-{{ section.id }}::before {
      top: 40%;
      right: -20%;
      width: 100%;
    }
  }

  @media screen and (max-width: 749px) {
    #ExodusAboutHero-{{ section.id }} .exodus-ah__inner {
      padding: 50px 20px;
      gap: 36px;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__heading {
      font-size: 30px;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__subtitle {
      font-size: 15px;
    }
    #ExodusAboutHero-{{ section.id }} .exodus-ah__image-card {
      aspect-ratio: 3 / 2;
    }
  }
{%- endstyle -%}

<section id="ExodusAboutHero-{{ section.id }}">
  <div class="exodus-ah__inner">
    <div class="exodus-ah__content">
      {%- if section.settings.label != blank -%}
        <p class="exodus-ah__label">{{ section.settings.label }}</p>
      {%- endif -%}
      <h1 class="exodus-ah__heading">{{ section.settings.heading }}</h1>
      <div class="exodus-ah__divider"></div>
      {%- if section.settings.subtitle != blank -%}
        <p class="exodus-ah__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>
    <div class="exodus-ah__image-wrap">
      <div class="exodus-ah__image-card">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 960 | image_tag: loading: 'eager' }}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag }}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "OUR STORY"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Exodus Breeders"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Trusted partners in professional breeding, built on experience and refined through practice."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}
