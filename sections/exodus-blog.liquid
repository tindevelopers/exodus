{%- comment -%}
  Exodus Blog â€” "Everyday Health Blog"
  Header row: title + "View All" button.
  3-column grid of blog article cards.
  Each card: image with date/read-time badge, article title below.
  Design: Figma Epharma-Home blog section.
{%- endcomment -%}

{%- style -%}
  #ExodusBlog-{{ section.id }} {
    width: 100%;
    max-width: 1920px;
    margin: 0 auto;
    padding: 80px 100px 120px;
  }
  /* Header row */
  #ExodusBlog-{{ section.id }} .exodus-blog__header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 60px;
  }
  #ExodusBlog-{{ section.id }} .exodus-blog__title {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: {{ section.settings.heading_size }}px;
    line-height: 110%;
    letter-spacing: -0.02em;
    color: #0D0D0D;
    margin: 0;
  }
  #ExodusBlog-{{ section.id }} .exodus-blog__view-all {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 16px 24px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 140%;
    color: #0D0D0D;
    border: 1px solid #0D0D0D;
    border-radius: 10px;
    text-decoration: none;
    white-space: nowrap;
    transition: background 0.2s, color 0.2s;
  }
  #ExodusBlog-{{ section.id }} .exodus-blog__view-all:hover {
    background: #0D0D0D;
    color: #FFFFFF;
  }
  /* Blog grid */
  #ExodusBlog-{{ section.id }} .exodus-blog__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 39px;
  }
  /* Blog card */
  #ExodusBlog-{{ section.id }} .exodus-blog__card {
    display: flex;
    flex-direction: column;
    gap: 19px;
    text-decoration: none;
    color: inherit;
  }
  /* Image wrapper */
  #ExodusBlog-{{ section.id }} .exodus-blog__image-wrap {
    position: relative;
    width: 100%;
    aspect-ratio: 547 / 404;
    border-radius: 10px;
    overflow: hidden;
    background: #F5F5F5;
  }
  #ExodusBlog-{{ section.id }} .exodus-blog__image-wrap img,
  #ExodusBlog-{{ section.id }} .exodus-blog__image-wrap svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  /* Date / read-time badge */
  #ExodusBlog-{{ section.id }} .exodus-blog__badge {
    position: absolute;
    left: 10px;
    bottom: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10px 16px;
    gap: 16px;
    background: #FFFFFF;
    border-radius: 6px;
    z-index: 1;
  }
  #ExodusBlog-{{ section.id }} .exodus-blog__badge-text {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
    color: #0D0D0D;
    white-space: nowrap;
  }
  #ExodusBlog-{{ section.id }} .exodus-blog__badge-sep {
    width: 10px;
    height: 1px;
    background: #0D0D0D;
    flex-shrink: 0;
  }
  /* Article title */
  #ExodusBlog-{{ section.id }} .exodus-blog__article-title {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
    line-height: 150%;
    color: #0D0D0D;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Tablet */
  @media screen and (max-width: 989px) {
    #ExodusBlog-{{ section.id }} {
      padding: 0 40px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__title {
      font-size: 48px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__article-title {
      font-size: 15px;
    }
  }
  /* Mobile */
  @media screen and (max-width: 749px) {
    #ExodusBlog-{{ section.id }} {
      padding: 0 20px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      margin-bottom: 30px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__title {
      font-size: 32px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__badge {
      padding: 8px 12px;
      gap: 10px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__badge-text {
      font-size: 14px;
    }
    #ExodusBlog-{{ section.id }} .exodus-blog__article-title {
      font-size: 14px;
    }
  }
{%- endstyle -%}

<section id="ExodusBlog-{{ section.id }}">
  {%- liquid
    assign blog = section.settings.blog
    assign articles_to_show = section.settings.articles_to_show
  -%}

  {%- comment -%} Header row {%- endcomment -%}
  <div class="exodus-blog__header">
    {%- if section.settings.heading != blank -%}
      <h2 class="exodus-blog__title">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.show_view_all and blog != blank -%}
      <a href="{{ blog.url }}" class="exodus-blog__view-all">
        {{ section.settings.view_all_label }}
      </a>
    {%- endif -%}
  </div>

  {%- comment -%} Blog grid {%- endcomment -%}
  <div class="exodus-blog__grid">
    {%- if blog != blank and blog.articles_count > 0 -%}
      {%- for article in blog.articles limit: articles_to_show -%}
        <a href="{{ article.url }}" class="exodus-blog__card">
          {%- comment -%} Image with badge {%- endcomment -%}
          <div class="exodus-blog__image-wrap">
            {%- if article.image != blank -%}
              {{
                article.image
                | image_url: width: 1100
                | image_tag:
                  loading: 'lazy',
                  sizes: '(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw',
                  widths: '375, 547, 750, 1100'
              }}
            {%- else -%}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}

            <div class="exodus-blog__badge">
              <span class="exodus-blog__badge-text">
                {{ article.published_at | date: '%b %d, %Y' }}
              </span>
              {%- if section.settings.show_read_time -%}
                <span class="exodus-blog__badge-sep"></span>
                <span class="exodus-blog__badge-text">
                  {%- assign words = article.content | strip_html | split: ' ' | size -%}
                  {%- assign read_time = words | divided_by: 200 -%}
                  {%- if read_time < 1 -%}
                    {%- assign read_time = 1 -%}
                  {%- endif -%}
                  {{ read_time }} min read
                </span>
              {%- endif -%}
            </div>
          </div>

          {%- comment -%} Article title {%- endcomment -%}
          <h3 class="exodus-blog__article-title">{{ article.title }}</h3>
        </a>
      {%- endfor -%}
    {%- else -%}
      {%- comment -%} Placeholder cards {%- endcomment -%}
      {%- for i in (1..3) -%}
        <div class="exodus-blog__card">
          <div class="exodus-blog__image-wrap">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            <div class="exodus-blog__badge">
              <span class="exodus-blog__badge-text">Jan 12, 2025</span>
              <span class="exodus-blog__badge-sep"></span>
              <span class="exodus-blog__badge-text">2 min read</span>
            </div>
          </div>
          <h3 class="exodus-blog__article-title">5 Essential Cold & Flu Remedies Every American Home Needs</h3>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Exodus Blog",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Everyday Health Blog"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 32,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 76
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "articles_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Articles to show",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View All button label",
      "default": "View All"
    },
    {
      "type": "checkbox",
      "id": "show_read_time",
      "label": "Show estimated read time",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Exodus Blog"
    }
  ]
}
{% endschema %}
