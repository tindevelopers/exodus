        },
        {
          "type": "image",
          "settings": { "width": 410, "height": 400 }
        },
        {
          "type": "image",
          "settings": { "width": 510, "height": 400 }
        },
        {
          "type": "image",
          "settings": { "width": 360, "height": 490 }
        },
        {
          "type": "image",
          "settings": { "width": 400, "height": 400 }
        }
      ]
    }
  ]
}
{% endschema %}
