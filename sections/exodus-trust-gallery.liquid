{%- comment -%}
  Exodus Trust Gallery
  Centered title with a full-width horizontally scrollable image row.
  Images have varied widths/heights, dark overlay, and rounded corners.
  Design: Figma product page "Trusted Health Partner" section.
{%- endcomment -%}

{%- style -%}
  #ExodusTrustGallery-{{ section.id }} {
    width: 100%;
    overflow: hidden;
    padding: 100px 0;
  }
  /* Title area */
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    max-width: 920px;
    margin: 0 auto 60px;
    padding: 0 40px;
  }
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__title {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: {{ section.settings.heading_size }}px;
    line-height: 110%;
    text-align: center;
    letter-spacing: -0.02em;
    color: #0D0D0D;
    margin: 0;
  }
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__subtitle {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 24px;
    line-height: 140%;
    text-align: center;
    color: #4C4C4C;
    margin: 0;
  }
  /* Scrollable image row */
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__scroll {
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__scroll::-webkit-scrollbar {
    display: none;
  }
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 20px;
    padding: 0 20px;
    width: max-content;
  }
  /* Image items â€” varied sizes via block settings */
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__item {
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    flex-shrink: 0;
  }
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  /* Dark overlay */
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__item::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    pointer-events: none;
  }
  /* Placeholder when no image */
  #ExodusTrustGallery-{{ section.id }} .exodus-tg__placeholder {
    width: 100%;
    height: 100%;
    background: #D0D0D0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Tablet */
  @media screen and (max-width: 989px) {
    #ExodusTrustGallery-{{ section.id }} {
      padding: 60px 0;
    }
    #ExodusTrustGallery-{{ section.id }} .exodus-tg__title {
      font-size: 40px;
    }
    #ExodusTrustGallery-{{ section.id }} .exodus-tg__header {
      margin-bottom: 40px;
    }
  }
  /* Mobile */
  @media screen and (max-width: 749px) {
    #ExodusTrustGallery-{{ section.id }} {
      padding: 40px 0;
    }
    #ExodusTrustGallery-{{ section.id }} .exodus-tg__title {
      font-size: 28px;
    }
    #ExodusTrustGallery-{{ section.id }} .exodus-tg__subtitle {
      font-size: 16px;
    }
    #ExodusTrustGallery-{{ section.id }} .exodus-tg__header {
      margin-bottom: 30px;
      padding: 0 20px;
    }
  }
{%- endstyle -%}

<section id="ExodusTrustGallery-{{ section.id }}">
  <div class="exodus-tg__header">
    {%- if section.settings.heading != blank -%}
      <h2 class="exodus-tg__title">{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.subtitle != blank -%}
      <p class="exodus-tg__subtitle">{{ section.settings.subtitle }}</p>
    {%- endif -%}
  </div>

  <div class="exodus-tg__scroll">
    <div class="exodus-tg__row">
      {%- for block in section.blocks -%}
        {%- if block.type == 'image' -%}
          <div
            class="exodus-tg__item"
            style="width: {{ block.settings.width }}px; height: {{ block.settings.height }}px;"
            {{ block.shopify_attributes }}
          >
            {%- if block.settings.image != blank -%}
              {{
                block.settings.image
                | image_url: width: 1200
                | image_tag:
                  loading: 'lazy',
                  sizes: '(min-width: 750px) 600px, 400px',
                  widths: '400, 600, 800, 1200'
              }}
            {%- else -%}
              <div class="exodus-tg__placeholder">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Exodus Trust Gallery",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted Partner for Every Breeding Need"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 28,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 54
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "width",
          "min": 200,
          "max": 700,
          "step": 10,
          "unit": "px",
          "label": "Width",
          "default": 400
        },
        {
          "type": "range",
          "id": "height",
          "min": 200,
          "max": 700,
          "step": 10,
          "unit": "px",
          "label": "Height",
          "default": 400
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Exodus Trust Gallery",
      "blocks": [
        {
          "type": "image",
          "settings": { "width": 400, "height": 520 }
        },
        {
