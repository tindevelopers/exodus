{%- comment -%}
  Exodus Featured Products
  Collection-based product grid with custom card design.
  Header row: large title + "Add to Cart" style link button.
  Cards: image with overlapping ATC button, optional sale badge, product info + price.
  Design: Figma Epharma-Home featured products section.
{%- endcomment -%}

{%- style -%}
  #ExodusFeatured-{{ section.id }} {
    width: 100%;
    max-width: 1920px;
    margin: 0 auto;
    padding: 60px 100px 100px;
  }
  /* Header row */
  #ExodusFeatured-{{ section.id }} .exodus-fp__header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 60px;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__title {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: {{ section.settings.heading_size }}px;
    line-height: 110%;
    letter-spacing: -0.02em;
    color: #0D0D0D;
    margin: 0;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__view-all {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 16px 24px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 140%;
    color: #0D0D0D;
    border: 1px solid #0D0D0D;
    border-radius: 10px;
    text-decoration: none;
    white-space: nowrap;
    transition: background 0.2s, color 0.2s;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__view-all:hover {
    background: #0D0D0D;
    color: #FFFFFF;
  }
  /* Product grid */
  #ExodusFeatured-{{ section.id }} .exodus-fp__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 40px;
  }
  /* Product card */
  #ExodusFeatured-{{ section.id }} .exodus-fp__card {
    display: flex;
    flex-direction: column;
    gap: 16px;
    text-decoration: none;
    color: inherit;
  }
  /* Image wrapper */
  #ExodusFeatured-{{ section.id }} .exodus-fp__image-wrap {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    border-radius: 10px;
    overflow: hidden;
    background: #F5F5F5;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__image-wrap img,
  #ExodusFeatured-{{ section.id }} .exodus-fp__image-wrap svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 0;
    display: block;
    padding: 16px;
  }
  /* Sale badge */
  #ExodusFeatured-{{ section.id }} .exodus-fp__badge {
    position: absolute;
    top: 20px;
    left: 20px;
    display: inline-flex;
    align-items: center;
    padding: 6px 14px;
    gap: 4px;
    background: #EF8E06;
    border-radius: 70px;
    z-index: 2;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__badge-percent {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: 16px;
    line-height: 150%;
    color: #FFFFFF;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__badge-off {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
    color: #FFFFFF;
  }
  /* Add to Cart button at bottom of image */
  #ExodusFeatured-{{ section.id }} .exodus-fp__atc {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 24px);
    max-width: 360px;
    height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 16px;
    background: #1F2F44;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 140%;
    color: #FFFFFF;
    text-decoration: none;
    z-index: 2;
    opacity: 0;
    transition: opacity 0.25s ease;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__card:hover .exodus-fp__atc {
    opacity: 1;
  }
  /* Quick view dot (hidden by default, shown on hover) */
  #ExodusFeatured-{{ section.id }} .exodus-fp__quick-view {
    display: none;
  }
  /* Product info */
  #ExodusFeatured-{{ section.id }} .exodus-fp__info {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-top: 12px;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__name-block {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__name {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
    line-height: 140%;
    color: #0D0D0D;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__variant {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 150%;
    color: #636363;
  }
  /* Price row */
  #ExodusFeatured-{{ section.id }} .exodus-fp__price-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__price {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
    line-height: 140%;
    color: #0D0D0D;
  }
  #ExodusFeatured-{{ section.id }} .exodus-fp__compare-price {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 160%;
    color: #A5A5A5;
    text-decoration: line-through;
  }

  /* Tablet */
  @media screen and (max-width: 989px) {
    #ExodusFeatured-{{ section.id }} {
      padding: 0 40px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__title {
      font-size: 48px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__atc {
      opacity: 1;
    }
  }
  /* Mobile */
  @media screen and (max-width: 749px) {
    #ExodusFeatured-{{ section.id }} {
      padding: 0 20px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      margin-bottom: 30px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__title {
      font-size: 32px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__name {
      font-size: 16px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__variant {
      font-size: 14px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__price {
      font-size: 16px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__atc {
      opacity: 1;
      height: 44px;
      font-size: 14px;
      padding: 12px 16px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__badge {
      padding: 4px 10px;
    }
    #ExodusFeatured-{{ section.id }} .exodus-fp__badge-percent,
    #ExodusFeatured-{{ section.id }} .exodus-fp__badge-off {
      font-size: 12px;
    }
  }
{%- endstyle -%}

<section id="ExodusFeatured-{{ section.id }}">
  {%- liquid
    assign collection = section.settings.collection
    assign limit = section.settings.products_to_show
  -%}

  {%- comment -%} Header row {%- endcomment -%}
  <div class="exodus-fp__header">
    {%- if section.settings.heading != blank -%}
      <h2 class="exodus-fp__title">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.show_view_all and collection != blank -%}
      <a href="{{ collection.url }}" class="exodus-fp__view-all">
        {{ section.settings.view_all_label }}
      </a>
    {%- endif -%}
  </div>

  {%- comment -%} Product grid {%- endcomment -%}
  <div class="exodus-fp__grid">
    {%- if collection != blank -%}
      {%- for product in collection.products limit: limit -%}
        {%- liquid
          assign current_variant = product.selected_or_first_available_variant
          assign on_sale = false
          if current_variant.compare_at_price > current_variant.price
            assign on_sale = true
            assign savings = current_variant.compare_at_price | minus: current_variant.price
            assign savings_percent = savings | times: 100.0 | divided_by: current_variant.compare_at_price | round
          endif
        -%}

        <div class="exodus-fp__card">
          {%- comment -%} Image wrapper {%- endcomment -%}
          <div class="exodus-fp__image-wrap">
            {%- if on_sale and section.settings.show_sale_badge -%}
              <div class="exodus-fp__badge">
                <span class="exodus-fp__badge-percent">{{ savings_percent }}%</span>
                <span class="exodus-fp__badge-off">Off</span>
              </div>
            {%- endif -%}

            <a href="{{ product.url }}">
              {%- if product.featured_image != blank -%}
                {{
                  product.featured_image
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 990px) 25vw, (min-width: 750px) 33vw, 50vw',
                    widths: '200, 400, 600, 800'
                }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </a>

            {%- if current_variant.available -%}
              <form method="post" action="{{ routes.cart_add_url }}">
                <input type="hidden" name="id" value="{{ current_variant.id }}">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="exodus-fp__atc">
                  Add to Cart
                </button>
              </form>
            {%- else -%}
              <span class="exodus-fp__atc" style="background: #A5A5A5; cursor: default;">
                Sold Out
              </span>
            {%- endif -%}
          </div>

          {%- comment -%} Product info {%- endcomment -%}
          <a href="{{ product.url }}" class="exodus-fp__card" style="text-decoration:none;">
            <div class="exodus-fp__info">
              <div class="exodus-fp__name-block">
                <h3 class="exodus-fp__name">{{ product.title }}</h3>
                {%- if product.variants.size > 1 -%}
                  <span class="exodus-fp__variant">
                    {{ current_variant.title }}
                  </span>
                {%- elsif product.metafields.descriptors.subtitle.value != blank -%}
                  <span class="exodus-fp__variant">
                    {{ product.metafields.descriptors.subtitle.value }}
                  </span>
                {%- endif -%}
              </div>

              <div class="exodus-fp__price-row">
                <span class="exodus-fp__price">{{ current_variant.price | money }}</span>
                {%- if on_sale -%}
                  <span class="exodus-fp__compare-price">/ {{ current_variant.compare_at_price | money }}</span>
                {%- endif -%}
              </div>
            </div>
          </a>
        </div>
      {%- endfor -%}
    {%- else -%}
      {%- comment -%} Placeholder cards when no collection selected {%- endcomment -%}
      {%- for i in (1..5) -%}
        <div class="exodus-fp__card">
          <div class="exodus-fp__image-wrap">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            <span class="exodus-fp__atc">Add to Cart</span>
          </div>
          <div class="exodus-fp__info">
            <div class="exodus-fp__name-block">
              <h3 class="exodus-fp__name">Product Title</h3>
              <span class="exodus-fp__variant">Variant</span>
            </div>
            <div class="exodus-fp__price-row">
              <span class="exodus-fp__price">$9.99</span>
            </div>
          </div>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Exodus Featured Products",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 36,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 76
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to show",
      "default": 5
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Columns (desktop)",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View All button label",
      "default": "Add to Cart"
    },
    {
      "type": "checkbox",
      "id": "show_sale_badge",
      "label": "Show sale badge",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Exodus Featured Products"
    }
  ]
}
{% endschema %}
